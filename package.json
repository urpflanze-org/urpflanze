		"@urpflanze/core": "^0.5.6",
		"@urpflanze/drawer-canvas": "^0.2.0",
		"@urpflanze/gcode-exporter": "^0.0.5",
		"@urpflanze/svg-exporter": "^0.0.5",
		"@urpflanze/svg-importer": "^0.0.3"
	}
