		"standard-version": "^9.3.1",
		"ttypescript": "^1.5.12",
		"typedoc": "^0.19.2",
		"typescript": "^4.0.5",
		"typescript-transform-paths": "^1.1.15",
		"webpack": "^5.4.0",
		"webpack-cli": "^4.2.0",
		"webpack-dev-server": "^3.11.2"
	},
	"dependencies": {
		"@urpflanze/animation": "^0.1.0",
